<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:text="View Ski Sessions"
        android:id="@+id/skiSession"
        android:layout_below="@+id/emailid"
        android:layout_alignParentStart="true"
        android:textColor="#ff000a"
        android:layout_weight="0.12"
        android:background="@drawable/androidwallpaper"
        android:textSize="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:text="Lets go skiing"
        android:id="@+id/buttonMap"
        android:onClick="startMapView"
        android:layout_weight="0.39"
        android:textColor="#ff0010"
        android:background="@drawable/ski2"
        android:textSize="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:text="Events"
        android:id="@+id/EventButton"
        android:textColor="#ff0b1d"
        android:background="@drawable/ski"
        android:textSize="20dp" />
</LinearLayout>